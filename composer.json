{
    "name": "railt/position",
    "license": "MIT",
    "type": "library",
    "homepage": "http://railt.org",
    "description": "Tool for analyzing positions in the source code",
    "keywords": [
        "analyzing",
        "visualization",
        "input",
        "position",
        "line",
        "column",
        "offset",
        "utils"
    ],
    "authors": [
        {
            "name": "Kirill Nesmeyanov",
            "email": "nesk@xakep.ru"
        }
    ],
    "support": {
        "issues": "https://github.com/railt/railt/issues",
        "source": "https://github.com/railt/position"
    },
    "require": {
        "php": ">=7.1.3",
        "railt/io": "1.4.*|1.4.x-dev"
    },
    "autoload": {
        "psr-4": {
            "Railt\\Component\\": "src"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "~7.5"
    },
    "extra": {
        "branch-alias": {
            "1.3.x": "1.3.x-dev",
            "1.4.x": "1.4.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
